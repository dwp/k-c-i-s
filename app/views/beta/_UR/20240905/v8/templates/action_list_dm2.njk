{% if (data["2401_actions2"]) %}
  <!-- Does the action list contain DM actions --> 
  {% if ((("Send a letter" in data["2401_actions2"]) and (data["who-sends2"] == "decisionmaker")) or ("Request solicitor to send a letter" in data["2401_actions2"]) or ("Request a banning order" in data["2401_actions2"])) %} 
    <!-- Loop through and display appropriately --> 
    {% for item in data["2401_actions2"] %}
        {% if (item == 'Send a letter') and (data["who-sends2"] == "decisionmaker") %}
            <li>{{ item }}<br>{{data["2401_letter_detail2"]}}</li>
        {% elif item == 'Request solicitor to send a letter' or item == 'Request a banning order' %}
          <li>{{ item }}</li>
        {% endif %}
    {% endfor %}  
  {% else %}
    <li>None</li>
  {% endif %}
{% else %}
    <li>None</li>
{% endif %}
