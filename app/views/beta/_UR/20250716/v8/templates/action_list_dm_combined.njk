<!-- make sure we're not null -->
{% if (data["2401_actions"] or data["2401_actions2"] )%}
    <!-- Do either of the action lists contain actions -->

        <!-- Loop through actions1 and display appropriately -->
        {% if (not data["2401_actions"] =="") %}
            {% for item in data["2401_actions"] %}
                <!-- Does the item contain DM actions -->
                {% if ((item == 'Send a letter') and (data["who-sends"] == "Decision maker") or (item == "Request solicitor to send a letter") or (item == "Request a banning order")) %}
                    {% if (item == 'Send a letter') and (data["who-sends"] == "Decision maker") %}
                        <li>{{ item }}<br>{{data["2401_letter_detail"]}}</li>
                    {% else %}
                        <li>{{ item }}</li>
                    {% endif %}
                {% endif %}
            {% endfor %}
        {% endif %}
        <!-- Loop through actions2 and display appropriately -->
        {% if (data["2401_actions2"]) %}
            {% for item in data["2401_actions2"] %}
                <!-- Does the item contain DM actions -->
                {% if ((item == 'Send a letter') and (data["who-sends2"] == "Decision maker") or (item == "Request solicitor to send a letter") or (item == "Request a banning order")) %}
                    {% if (item == 'Send a letter') and (data["who-sends2"] == "Decision maker") %}
                        <li>{{ item }}<br>{{data["2401_letter_detail2"]}}</li>
                    {% else %}
                        <li>{{ item }}</li>
                    {% endif %}
                {% endif %}
            {% endfor %}    
        {% endif %}


{% else %}
    <li>None</li>
{% endif %}

