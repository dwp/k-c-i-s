<dl class="govuk-summary-list">
    <!-- Does the inc1 action list contain any action  -->
    {% if ( not data["2401_actions"] == "") %}
        <!-- Loop through and display appropriately -->
        {% for item in data["2401_actions"] %}
        <div class="govuk-summary-list__row">
            {% if (item == 'Send a letter') and (data["who-sends"] == "Decision maker") %}
                <dt class="govuk-summary-list__key govuk-!-width-one-half">
                    {{ item }}
                </dt>
                <dd class="govuk-summary-list__value">
                    Requested: <br>{{data["20240429_inc1_date"]}}
                </dd>
            {% elif (item == 'Request solicitor to send a letter') or (item == 'Request a banning order') %}
                <dt class="govuk-summary-list__key govuk-!-width-one-half">
                    {{ item }}
                </dt>
                <dd class="govuk-summary-list__value">
                    Requested: <br>{{data["20240429_inc1_date"]}}
                </dd>
            {% endif %}
        </div>
        {% endfor %}     
    {% endif %}
    <!-- Does the inc2 action list contain any action  -->
    {% if ( not data["2401_actions2"] == "") %}
        <!-- Loop through and display appropriately -->
        {% for item in data["2401_actions2"] %}
        <div class="govuk-summary-list__row">
            {% if (item == 'Send a letter') and (data["who-sends2"] == "Decision maker") %}
                <dt class="govuk-summary-list__key govuk-!-width-one-half">
                    {{ item }}
                </dt>
                <dd class="govuk-summary-list__value">
                    Requested: <br>{{data["20240429_inc1_date"]}}
                </dd>
            {% elif (item == 'Request solicitor to send a letter') or (item == 'Request a banning order') %}
                <dt class="govuk-summary-list__key govuk-!-width-one-half">
                    {{ item }}
                </dt>
                <dd class="govuk-summary-list__value">
                    Requested: <br>{{data["20240429_inc1_date"]}}
                </dd>
            {% endif %}
        </div>
        {% endfor %}   
    {% elif (data["2401_actions"] == "" ) and (data["2401_actions2"] == "" )  %}
        <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
                None
            </dt>        
        </div>
    {% endif %}
</dl>